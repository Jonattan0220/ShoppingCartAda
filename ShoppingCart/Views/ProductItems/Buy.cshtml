@model ShoppingCart.Models.ViewModels.BuyProductItemViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayNameFor(model => model.Name)</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Available)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Available)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
    </dl>
</div>

    <h5>¿De las unidades disponibles cuántas va a comprar?</h5>
    <form asp-action="Buy">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="TotalQuantity"/>
            <span asp-validation-for="TotalQuantity" class="text-danger"></span>
            <input type="hidden" asp-for="ProductItemId"/>
            <input type="hidden" asp-for="Name"/>
            <input type="hidden" asp-for="ProductId"/>
            <input type="hidden" asp-for="Available"/>
            <input type="hidden" asp-for="Price"/>
            <input type="hidden" asp-for="Brand"/>
            <input type="hidden" asp-for="ProductName"/>
            <br />
            <br />
            <input type="submit" value="Comprar" class="btn btn-success" /> 
        </form>
<br />
<br />
<h5>@ViewData["TransactionErrorMessage"]</h5>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
